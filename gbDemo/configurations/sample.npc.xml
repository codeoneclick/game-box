<npc
    class_name="npc_configuration"
    base_class_name="configuration"
    is_external="1">
    <attributes>
        <attribute type="i32" property="id" path="/mob" name="id"/>
        <attribute type="std::string" property="character_configuration_filename" path="/npc" name="character_configuration_filename"/>
        <attribute type="f32" property="spawner_position_x" path="/mob" name="spawner_position_x"/>
        <attribute type="f32" property="spawner_position_y" path="/mob" name="spawner_position_y"/>
    </attributes>
    <relationships>
        <relationship type="quest_configuration" property="quest_configurations" is_to_many="1" is_external="1" path="/npc/quests" name="quest"/>
    </relationships>
</npc>
